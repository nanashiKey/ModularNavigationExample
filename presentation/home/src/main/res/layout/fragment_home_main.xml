<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_home_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME FRAGMENT IKUZOU"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press to Move"
        app:layout_constraintTop_toBottomOf="@id/tv_home_fragment_title"
        app:layout_constraintStart_toStartOf="@id/tv_home_fragment_title"
        app:layout_constraintEnd_toEndOf="@id/tv_home_fragment_title"
        android:layout_marginTop="30dp"
        android:background="#673AB7"
        android:padding="10dp"
        android:textColor="#ffff"/>
</androidx.constraintlayout.widget.ConstraintLayout>